<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserStatActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:text="사용자 통계"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:stretchColumns="1,2,3">

        <TableRow
            android:id="@+id/row0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_type0"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="?attr/colorButtonNormal"
                android:gravity="center"
                android:text="문제유형"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_count0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="?attr/colorButtonNormal"
                android:gravity="center"
                android:text="틀린 횟수"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_rate0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="?attr/colorButtonNormal"
                android:gravity="center"
                android:text="오답률"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_type1"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="한자"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_count1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_rate1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="0 %"
                android:textAlignment="center"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_type2"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="독해"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_count2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_rate2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="0 %"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_type3"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="어휘"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_count3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_rate3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:background="#f0f0f0"
                android:gravity="center"
                android:text="0 %"
                android:textAlignment="center"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="44dp"
        android:onClick="onClickHistory"
        android:text="문제보기" />

    <Button
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/history"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:onClick="onClickQuit"
        android:text="나가기" />

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="219dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="82dp"
        android:background="@android:color/background_light">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Loading..."
            android:textSize="36sp" />
    </RelativeLayout>

</RelativeLayout>